<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Label for ID -->
    <TextView
        android:id="@+id/label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for ID -->
    <TextView
        android:id="@+id/textView_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/label_id"
        app:layout_constraintStart_toEndOf="@+id/label_id"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label for MSSV -->
    <TextView
        android:id="@+id/label_mssv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSSV:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for MSSV -->
    <TextView
        android:id="@+id/textView_mssv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22150208"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/label_mssv"
        app:layout_constraintStart_toEndOf="@+id/label_mssv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label for Họ và Tên -->
    <TextView
        android:id="@+id/label_hoVaTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và Tên:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_mssv"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for Họ và Tên -->
    <TextView
        android:id="@+id/textView_hoVaTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyen Vo Thanh Phuc"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/label_hoVaTen"
        app:layout_constraintStart_toEndOf="@+id/label_hoVaTen"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label for Ngày Điểm Danh -->
    <TextView
        android:id="@+id/label_ngayDiemDanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày Điểm Danh:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_hoVaTen"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for Ngày Điểm Danh -->
    <TextView
        android:id="@+id/textView_ngayDiemDanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-11-15"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/label_ngayDiemDanh"
        app:layout_constraintStart_toEndOf="@+id/label_ngayDiemDanh"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label for Trạng Thái -->
    <TextView
        android:id="@+id/label_trangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng Thái:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/label_ngayDiemDanh"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for Trạng Thái -->
    <TextView
        android:id="@+id/textView_trangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có mặt"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/label_trangThai"
        app:layout_constraintStart_toEndOf="@+id/label_trangThai"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label for Trạng Thái -->
    <TextView
        android:id="@+id/label_lopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lớp học:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/label_trangThai"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Value for Trạng Thái -->
    <TextView
        android:id="@+id/textView_lopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="221405"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/label_lopHoc"
        app:layout_constraintStart_toEndOf="@+id/label_lopHoc"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
